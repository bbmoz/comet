{
  "manifest_version": 2,

  "name": "Comet",
  "description": "Bored? Create comets!",
  "version": "0.0.1",

  "browser_action": {
    "default_title": "Comet",
    "default_icon": "comet.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["comet.js"],
      "css": ["comet.css"]
    }
  ]
}
